<Window 
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
       Title="moveBondwire" Height="155.2" Width="278.933" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <ComboBox x:Name="direction_cb" HorizontalAlignment="Right" Margin="29,10,10,0" VerticalAlignment="Top" Width="120" SelectedIndex="0" Height="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
            <ComboBoxItem Content="Move along"/>
            <ComboBoxItem Content="Move in x"/>
            <ComboBoxItem Content="Move in y"/>
            <ComboBoxItem Content="Switch Pts"/>
        </ComboBox>
        <TextBox x:Name="dist_tb" HorizontalAlignment="Right" Height="30" Margin="29,46,10,0" TextWrapping="Wrap" Text="0.01" VerticalAlignment="Top" Width="120" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button Content="Move" HorizontalAlignment="Right" Height="30" Margin="29,81,10,0" VerticalAlignment="Top" Width="120" Click="Button_Click" IsDefault="True"/>
        <ComboBox x:Name="profile_cb" HorizontalAlignment="Left" Margin="10,81,0,0" VerticalAlignment="Top" Width="120" Height="30" SelectionChanged="profile_cb_SelectionChanged" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="Select Profile:" HorizontalAlignment="Left" Margin="10,55,0,0" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window> 
